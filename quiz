    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #fff0f5;
      color: #d6006d;
      text-align: center;
      padding: 40px;
    }
    h2 {
      margin-bottom: 20px;
    }
    .question {
      margin: 20px 0;
      font-weight: bold;
      font-size: 1.2em;
    }
    .options {
      margin: 10px 0 30px;
    }
    label {
      display: block;
      margin: 5px 0;
      cursor: pointer;
    }
    button {
      background-color: #ff3385;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 25px;
      cursor: pointer;
      font-size: 1em;
    }
    button:hover {
      background-color: #e6005c;
    }
